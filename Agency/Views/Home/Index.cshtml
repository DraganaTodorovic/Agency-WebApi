<div class="row text-center" style="margin:auto">
    <br />
    <form method="post" action="post/" id="create" style="margin: auto; width:400px">
        <h4>Izmena nekretnina</h4>
        <br />
        <div class="form-group">
            <label class="col-sm-6 col-form-label text-left" for="group" style="float:left">Agent: </label>
            <select class="form-control col-sm-4" id="createInput4select" style="width: 200px; float: right"></select>
            <br />
        </div>
        <br />
        <div class="form-group">
            <label class="col-sm-6 col-form-label text-left" for="oznaka" style="float:left">Agencijska oznaka: </label>
            <input class="form-control col-sm-6" type="text" id="createInput1" style="width: 100px; float: right; text-align:left" />
            <br />
            <p id="validationMsgInput1" style="color:red"></p>
        </div>
        <br />
        <div class="form-group">
            <label class="col-sm-6 col-form-label text-left" for="mesto" style="float:left">Mesto: </label>
            <input class="form-control col-sm-4" type="text" id="createInput3" style="width: 200px; float: right; text-align:left" />
            <br />
            <p id="validationMsgInput3" style="color:red"></p>
        </div>
        <br />
        <div class="form-group">
            <label class="col-sm-6 col-form-label text-left" for="godina" style="float:left">Godina izgradnje: </label>
            <input class="form-control col-sm-4" type="number" step="1" id="createInput2" style="width:100px; float:right; text-align:right" />
            <br />
            <p id="validationMsgInput2" style="color:red"></p>
        </div>
        <br />
        <div class="form-group">
            <label class="col-sm-6 col-form-label text-left" for="kvadratura" style="float:left">Kvadratura: </label>
            <input class="form-control col-sm-4" type="number" step="0.01" id="createInput5" style="width: 100px; float: right; text-align:right" />
            <br />
            <p id="validationMsgInput5" style="color:red"></p>
        </div>
        <br />
        <div class="form-group">
            <label class="col-sm-6 col-form-label text-left" for="cena" style="float:left">Cena: </label>
            <input class="form-control col-sm-4" type="number" step="0.01" id="createInput6" style="width: 100px; float: right; text-align:right" />
            <br />
            <p id="validationMsgInput6" style="color:red"></p>
        </div>
        <br />
        <div class="row form-group" style="margin:auto; width:300px">
            <button type="submit" class="btn btn-default" style="width:120px; float:left; color:black; background-color: yellow">Izmena</button>
            <input id="giveUpBtn" type="button" class="btn btn-default" style="width: 120px; float:right" value="Odustajanje" />
        </div>
    </form>

</div>

